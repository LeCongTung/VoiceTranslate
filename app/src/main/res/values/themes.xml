<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.VoiceTranslate" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/backgroundColor</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/backgroundColor</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:windowBackground" tools:targetApi="l">@color/backgroundColor</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GetImage" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowBackground" tools:targetApi="l">@color/black</item>
    </style>

    <style name="Theme.StatusBarWhite" parent="Theme.AppCompat.DayNight.NoActionBar">

        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>
</resources>